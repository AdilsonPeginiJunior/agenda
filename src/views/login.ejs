<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
	<div class="row">
		<div class="col-lg-2"></div>

		<div class="col-lg-8 my-3">
			<h1 class="text-center">Criar Conta ou Entar</h1>
			<p class="text-center lead">Faça login ou crie sua conta abaixo.</p>
			
			<%- include('./includes/messages') %>

			<div class="row">
				<div class="col-lg my-5">
					<h4>Faça seu cadastro</h4>
					<p>Se você ainda não tem conta, preencha o formulário abaixo.</p>

						<form class="form-cadastro" action="/login/register" method="POST">
							<input type="hidden" name="_csrf" value="<%= csrfToken %>">
							<div class="form-group">
								<label for="email" class="form-label">Seu email</label>
								<input type="email" class="form-control" name="email">
							</div>

							<div class="form-group">
								<label for="password" class="form-label">Sua Senha</label>
								<input type="password" class="form-control" name="password">
							</div>

							<button type="submit" class="btn btn-primary my-3">Criar Minha Conta</button>
						</form>
				</div>

				<div class="col-lg my-5">
					<h4>Faça seu login</h4>

					<p>Se você já tem conta, faça login abaixo.</p><br>

						<form class="form-login" action="/login/login" method="post">
							<input type="hidden" name="_csrf" value="<%= csrfToken %>">
							<div class="form-group">
								<label for="email" class="form-label">Seu email</label>
								<input type="email" class="form-control" name="email">
							</div>

							<div class="form-group">
								<label for="password" class="form-label">Sua Senha</label>
								<input type="password" class="form-control" name="password">
							</div>

							<button type="submit" class="btn btn-primary my-3">Entrar</button>
						</form>
				</div>
			</div>
		</div>

		<div class="col-lg-2"></div>
	</div>
</div>

<%- include('includes/footer') -%>